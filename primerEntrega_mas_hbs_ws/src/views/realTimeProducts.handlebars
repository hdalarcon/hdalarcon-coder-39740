<div>
    <h1>{{title}}</h1>
    <hr/>

    <h1>Agregar productos</h1>
<br>

<form id="addForm">
    <label for="title">Nombre del prodcuto</label>
    <input type="text" name="title" id="title">
    <br>
    <label for="description">Descripción del prodcuto</label>
    <br>
    <input type="text" name="description" id="description">
    <br>
    <label for="code">Código del prodcuto</label>
    <br>
    <input type="text" name="code" id="code">
    <br>
    <label for="price">Precio del prodcuto</label>
    <input type="text" name="price" id="price">
    <br>
    <label for="thumbnail">Foto del prodcuto</label>
    <input type="text" name="thumbnail" id="thumbnail">
    <br>
    <label for="stock">Stock del prodcuto</label>
    <input type="text" name="stock" id="stock">
    <br>
    <label for="category">Categoria del prodcuto</label>
    <input type="text" name="category" id="category">
    <br>
    <label for="thumbnail">Foto del prodcuto</label>
    <input type="text" name="thumbnail" id="thumbnail">
    <br>
    <button type="submit">Ingresar Producto</button>
</form>

<hr/>

    <table id="table">
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Description</td>
            <td>Code</td>
            <td>Price</td>
            <td>Status</td>
            <td>Stock</td>
            <td>Category</td>
            <td>Thumbnail</td>
        </tr>
        {{#each listProducts}}
            <tr id="product-{{id}}">
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{code}}</td>
                <td>{{price}}</td>
                <td>{{status}}</td>
                <td>{{stock}}</td>
                <td>{{category}}</td>
                <td>{{thumbnail}}</td>
            </tr>
        {{/each}}
    </table>
</div>


<script type="module">
    import {io} from "https://cdn.socket.io/4.3.2/socket.io.esm.min.js";

    const socket = io();

    socket.on('connect', () => {
        console.log('Conectado Cliente');
    });

    socket.on('disconnect', () => {
        console.log('Desconectado del servidor');
    });


    socket.on('productCreated', product => {
        const row = `
            <tr id="product-${product.id}">
              <td>${product.id}</td>
              <td>${product.title}</td>
              <td>${product.description}</td>
              <td>${product.code}</td>
              <td>${product.price}</td>
              <td>${product.status}</td>
              <td>${product.stock}</td>
              <td>${product.category}</td>
              <td>${product.thumbnail}</td>
            </tr>
          `;
        document.querySelector('#table tbody').insertAdjacentHTML("beforeend", row);
    });

    socket.on('productRemoved', id => {
        const productElement = document.querySelector(`#product-${id}`);
        if (productElement) productElement.remove();
    });

</script>